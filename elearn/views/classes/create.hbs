<main>
    {{#each user}}
        {{log _id}}
        {{log username}}
    <section class="form-container create-course-conn">
        <div class="create-course">
            <form action="/instructors/classes/create" method="post" enctype="multipart/form-data">
                <div class="form-inputs input-select">
                    <select name="language">
                        <option value="english">英文</option>
                        <option value="chinese">中文</option>
                    </select>
                </div>
                <div class="form-inputs input-text">
                    <input type="text" name="title">
                    <span>课程标题</span>
                </div>
                <div class="form-inputs input-area">
                    <textarea name="desc" cols="30" rows="5"></textarea>
                    <span>课程介绍</span>
                </div>
                <div>
                    <input type="hidden" name="userName" value="{{this.username}}">
                    <input type="hidden" name="userID" value="{{this._id}}">
                </div>
                <div class="form-inputs input-file">
                    <input type="file" name="profile">
                </div>
                <div class="form-inputs input-submit">
                    <input type="submit" value="创建课程">
                </div>
            </form>
        </div>
    </section>
    {{/each}}
</main>